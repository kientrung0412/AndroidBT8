<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="2dp"
    android:background="#B33E4F5B"
    android:gravity="center_vertical"
    android:padding="4dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_content"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:src="@drawable/ikenai_kanojo_no_otetsudai" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="16dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CHuyệnhas dhasdn djas dạ da j sd"
            android:textColor="#FCB502"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_chapter_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chương 53 - t/g: ágdf"
            android:textColor="#D3D3D3"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_update_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chương 53 - t/g: ágdf"
            android:textColor="#D3D3D3"
            android:textSize="12sp" />

    </LinearLayout>
</LinearLayout>